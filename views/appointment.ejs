<!DOCTYPE html>
<html lang="en">
  <%- include('./layouts/header'); %>
  <body>
    <%- include('./layouts/nav'); %>
    <main>
      <div class="m-4 rounded-2 border">
        <div class="row p-3">
          <div class="col-8 px-5 py-4">
            <h3>Welcome to <span> <%= data.title %> </span>!</h3>
            <hr />
            <p><%= data.description %></p>
            <div class="container mt-5">
              <h3 class="mb-4"><u>Admin Appointment Slots</u></h3>
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="appointmentDate" class="form-label"
                      >Select Date:</label
                    >
                    <input
                      type="date"
                      class="form-control"
                      id="appointmentDate"
                      placeholder="Select date"
                    />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div id="slotsContainer">
                    <!-- Appointment slots for the selected date will be dynamically added here -->
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-4">
            <img src="<%= data.image %>" class="img-fluid p-auto d-block" />
          </div>
        </div>
      </div>
    </main>
  </body>
  <%- include('./layouts/scripts'); %>
</html>
